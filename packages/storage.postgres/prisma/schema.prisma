
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkflowState {
  id                Int         @id @default(autoincrement())
  flowId            String      @map("flow_id") @unique
  started           DateTime    @db.Timestamptz(6)
  current           Int
  initial           Json
  results           Json?
  failedStep        Int?        @map("failed_step")
  failedErrMsg      String?     @map("failed_err_msg") @db.VarChar(255)
  failedErrStack    String?     @map("failed_err_stack") @db.VarChar(2000)
}

